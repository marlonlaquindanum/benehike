{% style %}
  h1 {
    font-size: 48px;
  }

  .buttonWrapper {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
  }

  button {
    font-weight: 400;
    line-height: 20px;
    letter-spacing: 1px;
    border: none;
    padding: 20px 40px;
    font-size: 18px;
    cursor: pointer;
    margin: 0 10px;
  }

  button:hover {
    border-bottom: solid 3px #ff6100;
    border-radius: 0;
    color: #ff6100;
  }

  .section-id-{{ section.id }} button.active {
    border-bottom: solid 3px #ff6100;
    border-radius: 0;
  }

  .active {
    /* background-color: white; */
  }

  .content {
    display: none;
    padding: {{ section.settings.padding_top_desktop }}px 0 {{  section.settings.padding_bottom_destop }}px 0;
  }

  .content.active {
    display: flex;
    width: 100%;
  }

  .content.active > img {
    margin-left: 20px;
    margin-right: 8%;
  }

  .product-details {
    width: 100%;
  }

  .product-details--container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
  }

  .bg-color {
    background-color: {{ section.settings.bg_color }}
  }

  .content.active > p {
    font-size: 16px;
    line-height: 24px;
    font-weight: 700;
    color: #5D5E5F;
  }

  .section-id-{{ section.id }} .container {
    display: flex;
    overflow-x: auto;
  }

  .icon-text {
    font-weight: 700;
    font-size: 24px;
    line-height: 32px;
    color: #2E2E2E;
    text-transform: uppercase;
  }

  .product-detals--icon {
    text-align: center;
  }

  .product-details--heading {
    font-weight: 700;
    font-size: 32px;
    line-height: 40px;
    text-align: center;
    color: #171717;
    margin-bottom: 20px;
  }

  .section-id-{{ section.id }} .content.active a {
    text-decoration: underline;
    font-weight: 400;
    line-height: 24px;
    font-size: 16px;
  }

  @media (max-width: 768.97px) {
    .content {
      padding: {{ section.settings.padding_top_mobile }}px 0 {{ section.settings.padding_bottom_mobile }}px 0;
    }

    .content.active {
      display: block;
    }

    .content.active > p {
      width: 100%;
      font-size: 14px;
    }

    .content.active > img {
      margin-left: 0;
    }
  }
{% endstyle %}
<script src="{{ 'product-details-tab.js' | asset_url }}" defer></script>
<div class="section-id-{{ section.id }} product-detail-tabs">
  <product-details-tab>
    <div class="wrapper">
      <div class="button-wrapper">
        <div class="container">
          {% for block in section.blocks %}
            {% if forloop.index == 1 %}
              <button class="tab-button active" data-id="{{ forloop.index }}">{{ block.settings.tab_heading }}</button>
            {% else %}
              <button class="tab-button" data-id="{{ forloop.index }}">{{ block.settings.tab_heading }}</button>
            {% endif %}
          {% endfor %}
        </div>
      </div>
      <div class="bg-color">
        <div class="container content-wrapper">
          {% for block in section.blocks %}
            {% if forloop.index == 1 %}
              <div class="content active" id="{{ forloop.index }}">
                {{ block.settings.details }}
                {% if block.settings.image != blank %}
                  <img
                    src="{{ block.settings.image | image_url: width: 800 }}"
                    loading="lazy"
                    width="595"
                    height="{{ 400 | divided_by: block.settings.image.aspect_ratio | ceil }}"
                  >
                {% endif %}
              </div>
            {% else %}
              <div class="content" id="{{ forloop.index }}">
                {% if block.settings.details != blank %}
                  {{ block.settings.details }}
                {% endif %}
                {% if block.settings.image != blank %}
                  <img
                    src="{{ block.settings.image | image_url: width: 800 }}"
                    loading="lazy"
                    width="400"
                    height="{{ 400 | divided_by: block.settings.image.aspect_ratio | ceil }}"
                  >
                {% endif %}
                {% if block.settings.heading != blank %}
                  <div class="product-details">
                    <h2 class="product-details--heading">{{ block.settings.heading }}</h2>
                    <div class="product-details--container">
                      {% if block.settings.icon_1 != blank %}
                        <div class="product-detals--icon">
                          <img
                            src="{{ block.settings.icon_1 | image_url: width: 800 }}"
                            loading="lazy"
                            width="72"
                            height="{{ 72 | divided_by: block.settings.image.aspect_ratio | ceil }}"
                          >
                          <div class="icon-text">{{ block.settings.icon_text_1 }}</div>
                        </div>
                      {% endif %}
                      {% if block.settings.icon_2 != blank %}
                        <div class="product-detals--icon">
                          <img
                            src="{{ block.settings.icon_2 | image_url: width: 800 }}"
                            loading="lazy"
                            width="72"
                            height="{{ 72 | divided_by: block.settings.image.aspect_ratio | ceil }}"
                          >
                          <div class="icon-text">{{ block.settings.icon_text_2 }}</div>
                        </div>
                      {% endif %}
                      {% if block.settings.icon_3 != blank %}
                        <div class="product-detals--icon">
                          <img
                            src="{{ block.settings.icon_3 | image_url: width: 800 }}"
                            loading="lazy"
                            width="72"
                            height="{{ 72 | divided_by: block.settings.image.aspect_ratio | ceil }}"
                          >
                          <div class="icon-text">{{ block.settings.icon_text_3 }}</div>
                        </div>
                      {% endif %}
                      {% if block.settings.icon_4 != blank %}
                        <div class="product-detals--icon">
                          <img
                            src="{{ block.settings.icon_4 | image_url: width: 800 }}"
                            loading="lazy"
                            width="72"
                            height="{{ 72 | divided_by: block.settings.image.aspect_ratio | ceil }}"
                          >
                          <div class="icon-text">{{ block.settings.icon_text_4 }}</div>
                        </div>
                      {% endif %}
                      {% if block.settings.icon_5 != blank %}
                        <div class="product-detals--icon">
                          <img
                            src="{{ block.settings.icon_5 | image_url: width: 800 }}"
                            loading="lazy"
                            width="72"
                            height="{{ 72 | divided_by: block.settings.image.aspect_ratio | ceil }}"
                          >
                          <div class="icon-text">{{ block.settings.icon_text_5 }}</div>
                        </div>
                      {% endif %}
                      {% if block.settings.icon_6 != blank %}
                        <div class="product-detals--icon">
                          <img
                            src="{{ block.settings.icon_6 | image_url: width: 800 }}"
                            loading="lazy"
                            width="72"
                            height="{{ 72 | divided_by: block.settings.image.aspect_ratio | ceil }}"
                          >
                          <div class="icon-text">{{ block.settings.icon_text_6 }}</div>
                        </div>
                      {% endif %}
                    </div>
                  </div>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </product-details-tab>
</div>

